<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.debbddajavafx.Presentacion.ProductoController">

    <children>
        <!-- Título -->
        <Label layoutX="20.0" layoutY="20.0" text="Productos">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <!-- ComboBox para seleccionar categoría -->
        <ComboBox fx:id="comboProductos" layoutX="20.0" layoutY="60.0" prefWidth="300.0" />

        <!-- Etiquetas y campos -->
        <Label layoutX="20.0" layoutY="110.0" text="Codigo Producto:" />
        <TextField fx:id="txtCOD_Prod" editable="false" layoutX="133.0" layoutY="105.0" prefWidth="150.0" />

        <Label layoutX="20.0" layoutY="150.0" text="Codigo Categoria:" />
        <TextField fx:id="txtCod_Cat" layoutX="133.0" layoutY="145.0" prefHeight="25.0" prefWidth="150.0" />

        <Label layoutX="19.0" layoutY="190.0" text="Nombre:" />
        <TextField fx:id="txtNombre" layoutX="133.0" layoutY="185.0" prefWidth="300.0" />
        <TextField fx:id="txtNombreCategoria" editable="false" layoutX="290.0" layoutY="146.0" prefHeight="25.0" prefWidth="150.0" />

        <Label layoutX="19.0" layoutY="230.0" text="Cantidad :" />
        <TextField fx:id="txtCantidad" layoutX="133.0" layoutY="225.0" prefWidth="300.0" />

        <Label layoutX="19.0" layoutY="270.0" text="Precio :" />
        <TextField fx:id="txtPrecio" layoutX="133.0" layoutY="265.0" prefWidth="300.0" />




        <!-- Botones de acción -->
        <Button fx:id="btnAnadir" layoutX="20.0" layoutY="300.0" onAction="#anadirProducto" prefWidth="100.0" text="Añadir" />
        <Button fx:id="btnModificar" layoutX="130.0" layoutY="300.0" onAction="#modificarProducto" prefWidth="100.0" text="Modificar" />
        <Button fx:id="btnBorrar" layoutX="240.0" layoutY="300.0" onAction="#borrarProducto" prefWidth="100.0" text="Borrar" />

        <!-- Botón Salir -->
        <Button fx:id="btnSalir" layoutX="500.0" layoutY="350.0" onAction="#cerrarVentana" prefWidth="70.0" text="Salir" />


    </children>



</AnchorPane>
